<div class="form-wrapper">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 clearfix">
      <%= form_with model: @user, builder: TemplateFormBuilder do |f| %>
<%= f.text_field :name %>
<%= f.text_field :email %>
<%= f.text_field :password %>

<span class="submit"><%= f.submit %></span>
<% end %>
</div>

</div>
</div>
